<% @intro_colour = "green" %>
<% content_for :intro do %>
  <h2>My Account</h2>
  <p class="lead">Manage your account settings and preferences</p>
<% end %>

<%= link_to "Back", :back %>

<nav class="tabbed">
  <ul class="tabs">
    <li class="tab"><a id="default_tab" href="#settings">Settings</a></li>
    <li class="tab"><a href="#zones">Zones</a></li>
    <li class="tab"><a href="#reports">My Reports</a></li>
  </ul>
</nav>

<section id="settings">
  <div class="userview">
    <div class="sixteen">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= devise_error_messages! %>

        <div><%= f.label :email %>
        <%= f.email_field :email %></div>

        <div><%= f.label :password, "password (leave blank if you don't want to change it"%>
        <%= f.password_field :password, :autocomplete => "off" %></div>

        <div><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %></div>

        <h3>Email Preferences</h3>
        <div class="email-prefs">
          <div>
            <%= f.label :receive_zone_emails, "Receive email alerts for reports in your chosen zones" %>
            <%= f.check_box :receive_zone_emails %>
          </div>
          <br/>

          <div>
            <%= f.label :receive_report_emails, "Receive email alerts for reports you've created" %>
            <%= f.check_box :receive_report_emails %>
          </div>
          <br/>

          <!--
          <div>
            <%= f.label :email_comments, "Receive email alerts for comments on reports you've created" %>
            <%= f.check_box :email_comments %>
          </div>
          -->
        </div>
        <br/>
        <div><%= f.submit "Update Settings" %></div>
      <% end %>

      <hr/>

      <h3>Cancel account</h3>
      <p>Don't want your account any more? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

      <h3>Sign out</h3>
      <p>Click <%= link_to "here", destroy_user_session_path, :method => :delete %> to sign out.</p>

    </div>
  </div>
</section>

<section id="zones">
  <div class="zonesview">
    <div class="sixteen">
      <%= render 'zones/form' %>
    </div>
  </div>
</section>


