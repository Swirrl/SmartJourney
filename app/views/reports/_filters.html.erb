<section id="filters">
  <div class="filterview">
    <div class="sixteen">

      <%= form_tag reports_path, :method => 'get' do %>

        <div>
          <%= radio_button_tag 'future', 'false', !@future %> Current
          &nbsp;
          <%= radio_button_tag 'future', 'true', @future %> Planned
        </div>
        <br/>

        <% if current_user %>
          <div>
            <%= check_box_tag 'selected_zones_only', 'true', @selected_zones_only  %> Show only reports in your chosen zones (edit these in the <%= link_to "my account", edit_user_registration_path %> section).
          </div>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path %> to filter reports by your chosen geographic zones. <br/>
        <% end %>
        <br/>

        <%= label_tag 'show reports with any of these tags (comma separated)' %>
        <%= text_field_tag 'tags', @tags_string %>

        <!-- for later JS version maybe?
        <div id="tags-list" style="display:none">
          <% if @tags %>
            <% @tags.each do |t| %>
              <div style="display:inline;">
                <span class="tag-span"><%= t %></span>
                <a href="#" class="clear-tag">(x)</a>
              <div>
            <% end %>
          <% end %>
        </div>
        -->

        <br/><br/>

        <%= submit_tag 'Apply filters' %>
      <% end %>

    </div>
  </div>
</section>