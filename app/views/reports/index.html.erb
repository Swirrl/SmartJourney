<% content_for :intro do %>
  <h2>Share &amp; discover local weather and travel</h2>
  <p class="lead">'Official' and crowd-sourced weather and travel info across Aberdeen and Aberdeenshire.</p>
<% end %>

<div id="home-cta">
  <div class="reportbtn">
    <%= link_to "Report It!", new_report_path, class:"report" %>
  </div>
  <div>
    <p>
      <strong>Click the button to the right to report a new issue.</strong>
    </p>
    <p>
      Get more details about existing reports by selecting on pins/clusters on the map or browsing the recent reports.
    </p>
  </div>
</div>

<nav class="tabbed">
  <ul class="tabs" style="display:none">
    <li class="tab"><a id="default_tab" href="#map"><%= image_tag 'map-icon.png' %>Map</a></li>
    <li class="tab"><a href="#reports"><%= image_tag 'report-icon.png' %>Recent Reports</a></li>
  </ul>
</nav>

<%= render 'feed_map' %>
<%= render 'feed_list', :reports => @reports.last(20) %>

<%= render 'filters' %>