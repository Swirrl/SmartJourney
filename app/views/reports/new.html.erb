<% content_for :intro do %>
  <h2>Submit a new report</h2>
  <p class="lead">Please provide as much detail as possible</p>
<% end %>

<% unless current_user %>
  You're not logged in. You might want to <%= link_to "Sign in / up", new_user_session_path %>, so you can manage your reports later.
  <br/><br/>
<% end %>

<%= form_for(@report) do |f| %>

  <% #uses dynamic_form gem (for now) %>
  <%= error_messages_for(@report)  %>
  <%= render :partial => 'form_fields', :locals => {:report => @report, :form => f} %>

<% end %>